{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext.asynciterable"
    ],
    "module": "CommonJS",
    // "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src",
    "package.json"
  ]
}
